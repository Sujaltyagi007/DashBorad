generator client {
  provider        = "prisma-client-js"
  output          = "../app/generated/prisma"
  previewFeatures = ["relationJoins"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./Dev.db"
}

model email {
  id            Int        @id @default(autoincrement())
  name          String?
  email         String?
  subject       String?
  Date          DateTime   @updatedAt
  emailCategory String?
  emailBody     emailBody?
}

model emailBody {
  heading   String?
  content   String?
  message   email?  @relation(fields: [messageid], references: [id])
  messageid Int     @unique
}
