generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model email {
  id            Int        @id @default(autoincrement())
  name          String?
  email         String?
  subject       String?
  Date          DateTime   @updatedAt
  emailCategory String?
  emailBody     emailBody?
}

model emailBody {
  heading   String?
  content   String?
  message   email?  @relation(fields: [messageid], references: [id])
  messageid Int     @unique
}

